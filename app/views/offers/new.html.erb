<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card rounded-3 shadowmt-3">
        <div class="card-body">
          <%= simple_form_for(@offer) do |f| %>
            <%= f.association :offered_item_id %>
            <%= f.button :submit, class: 'btn btn-book' %>
            <br>
            <div>
              <%= link_to 'Back to Item', item_path(@item), class: 'btn btn-secondary' %>
            </div>
             <div>
              <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
