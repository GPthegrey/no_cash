<h4 class='text-center my-2'><strong>Pendientes</strong></h4>
<div class='border bg-background my-2'>
  <% @accepted_deals.each do |deal| %>
    <%= render 'dealstatus', deal: deal %>
    <div class='d-flex justify-content-around'>
      <div class="d-flex">
        <%= link_to 'Coordinar Entrega', chatroom_path(deal), class: 'btn btn-info m-0 p-0' %>
      </div>
      <div class="d-flex">
        <%= render 'complete', deal: deal %>
      </div>
      <div class="d-flex">
        <%= render 'cancel', deal: deal %>
      </div>
    </div>
  <% end %>
</div>
