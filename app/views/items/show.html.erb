<div class="row justify-content-center" data-controller="toggle">
  <div class="item-show col-sm-6 col-12 p-0">
    <div id="carousel<%= @item.id %>" class="carousel slide position-relative" data-bs-ride="carousel" style="height: 300px; width: 100%; overflow: hidden;">
  <div class="carousel-inner rounded-top-4">
    <% if @item.photos.attached? %>
      <% @item.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %> position-relative">
          <%= cl_image_tag photo.key, class: "d-block w-100 img-fluid", style: "height: 300px; width: 100%;" %>
          <div class="p-1 mb-2 bg-greypink position-absolute bottom-0 start-50 translate-middle-x">
            <%= @item.category.name %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Carousel controls -->
  <a class="carousel-control-prev" href="#carousel<%= @item.id %>" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel<%= @item.id %>" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>
    <div class="card-body my-3">
      <div class="d-flex justify-content-between mx-5">
        <div>
          <h5 class="card-title"><%= @item.name %></h5>
          <h6><i class="fa-solid fa-location-dot"> </i><%= @item.user.address %></h6>
        </div>
        <div class='bg-pink p-2'><h5><%= @item.condition %></h5></div>
      </div>
      <p class="card-text mx-5">Descripci√≥n: <%= @item.description %>.</p>
      <br>
      <p class="mx-5">Cambio por: </p>
      <div class="d-flex mx-5">
        <% @item.preferences.each do |preference| %>
        <div class='bg-pink p-3 m-3'><%= preference.category.name %></div>
        <% end %>
      </div>
     <div class="text-center"> <!-- Added text-center class to center the button -->
        <button class='btn btn-book' data-action='click->toggle#showoffer'>Me interesa!</button>
      </div>
    </div>
  </div>

  <div class="row justify-content-center d-none m-3" data-toggle-target='form'>
    <div class="col-md-6">
      <!-- Bootstrap styled form -->
      <%= simple_form_for(@offer) do |f| %>
        <%= f.hidden_field :requested_item_id, value: @item.id %>
        <div class="form-group">
          <%= f.label :offered_item_id, "Ofrece un producto" %>
          <%= f.select :offered_item_id, options_for_select(current_user.items.pluck(:name, :id)), { prompt: "..." }, class: 'form-control' %>
        </div>
        <div class="text-center"> <!-- Center the submit button -->
          <%= f.button :submit, "Enviar Oferta", class: 'btn btn-book my-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
