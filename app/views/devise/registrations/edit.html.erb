<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Editar <%= resource_name.to_s.humanize %></h3>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>
            <div class="mb-3">
              <%= f.input :photo,
                          as: :file,
                          required: false,
                          label: "Foto de Perfil",
                          input_html: { class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= f.input :address,
                          required: true,
                          label: "Dirección",
                          input_html: { class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= f.input :nickname,
                          required: false,
                          label: "Nickname",
                          input_html: { class: "form-control", autocomplete: "nickname" } %>
            </div>
            <div class="mb-3">
              <%= f.input :password,
                          required: false,
                          label: "Nueva Contraseña",
                          hint: ("#{@minimum_password_length} caracteres como mínimo" if @minimum_password_length),
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
            </div>
            <div class="mb-3">
              <%= f.input :password_confirmation,
                          required: false,
                          label: "Confirmar Contraseña",
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
            </div>
            <div class="mb-3">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          label: "Email",
                          input_html: { class: "form-control", autocomplete: "email" } %>
            </div>
            <div class="mb-3">
              <%= f.input :current_password,
                          required: true,
                          label: "Contraseña Actual",
                          input_html: { class: "form-control", autocomplete: "current-password" } %>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
              <%= f.button :submit, "Actualizar", class: "btn btn-primary" %>
              <div><%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
